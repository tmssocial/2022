/* 快速導航 */
.fast_nav{
	position:static;
	width:310px;
}
@media (min-width:1000px){
	.fast_nav.fast_nav-fixed{
		position:fixed;
		top:20%;
	}

	.fast_nav.fast_nav-bottom{
		display:none;
	}
}
@media (max-width:1000px){
	.fast_nav.fast_nav-fixed{
	width:100%;
	}

	.fast_nav.fast_nav-bottom{
	width:100%;
	}
}


/* 主題探究 */
.makcy_nav{
	position:static;
	width:310px;
}
@media (min-width:1000px) and (min-height:800px){
	.makcy_nav.fast_nav-fixed{
		position:fixed;
		top:10%;
	}

	.makcy_nav.fast_nav-bottom{
		display:none;
	}
}
@media (max-width:1000px){
	.makcy_nav.fast_nav-fixed{
	width:100%;
	}

	.makcy_nav.fast_nav-bottom{
	width:100%;
	}
}